generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model students {
  nis             BigInt        @unique @id
  name            String        @db.VarChar(123)
  password        String        @db.VarChar(123)
  class_name_id   BigInt        
  teacher_nip     BigInt        
  role_id         BigInt        
  class_name      class_name    @relation(fields: [class_name_id], references: [id])
  teacher         teachers      @relation(fields: [teacher_nip], references: [nip])
  role            roles         @relation(fields: [role_id], references: [id])

  attendance attendance[]
}

model teachers {
  nip             BigInt        @unique @id
  name            String        @db.VarChar(123)
  password        String        @db.VarChar(123)
  class_name_id   BigInt       
  role_id         BigInt       
  class_name      class_name    @relation(fields: [class_name_id], references: [id])
  roles           roles         @relation(fields: [role_id], references: [id])

  @@unique([class_name_id, role_id])

  students students[]
}

model class_name {
  id        BigInt         @id @unique @default(autoincrement())
  class     BigInt         @db.BigInt
  code      String         @db.VarChar(1)

  students students[]
  teachers teachers[]
}

model roles {
  id        BigInt         @id @unique @default(autoincrement())
  role      String         @db.VarChar(12)

  students students[]
  teachers teachers[]
}

model attendance {
  id          BigInt       @id @unique @default(autoincrement())
  date        DateTime     @db.Date
  check_in    DateTime     @db.Timestamp
  check_out   DateTime     @db.Timestamp
  student_nis BigInt
  students    students     @relation(fields: [student_nis], references: [nis], onDelete: Cascade)
}